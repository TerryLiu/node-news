{% assign title = post.title %}
{% include "header" %}

<div class="content">
  <h1>{{post.title}}</h1>
  <span class="user">by {{post.user}}</span>
  <span class="time">{{post.timestamp | format_time}}</span> |
  <a href="/posts/{{post.id}}" class="link">link</a> |
  <span class="discuss">{{post.comment}} comment</span>
  <p class="text">{{post.content}}</p>
</div>

{% include "snippet_reply" %}

<div class="comments">
{% tree comments %}
{% for comment in comments %}
  {% include "snippet_comment" with comment %}
{% endfor %}
</div>

{% include "footer" %}